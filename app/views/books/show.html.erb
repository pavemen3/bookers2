<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/user_info', user: @user %>
      <%= render 'new_book', book: @new_book = Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @user.get_book_profile_image(40, 40), class: "attachment user profile_image fallback" %>
            <% end %>
            <br>
            <%= @user.name %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book.id) %>
          </td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_#{@book.id}" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_#{@book.id}", "data-confirm" => "本当に消しますか？" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
